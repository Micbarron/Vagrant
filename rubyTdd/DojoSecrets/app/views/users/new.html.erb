<h1>Create a User</h1>

<form action="" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="text" name="user[:email]" id="" placeholder="Email"><br>
    <input type="text" name="user[:name]" id="" placeholder="Name"><br>
    <input type="password" name="user[:password]" id="" placeholder="Password"><br>
    <input type="password" name="user[:password_confirmation]" id="" placeholder="Confirm Password"><br>
    <input type="submit" value="Join">
</form>

